<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_xsmall">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/team_logo_iv"
        android:layout_height="@dimen/icon_size_small"
        android:layout_width="@dimen/icon_size_small"
        android:layout_marginStart="@dimen/spacing_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/team_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xxxsmall"
        app:layout_constraintLeft_toRightOf="@id/team_logo_iv"
        app:layout_constraintTop_toTopOf="@id/team_logo_iv"
        app:layout_constraintBottom_toBottomOf="@id/team_logo_iv"
        tools:text="Arsenal"
        style="@style/TextAppearance.MaterialComponents.Body1"/>

</androidx.constraintlayout.widget.ConstraintLayout>